{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["es2015"],

    /* Modules */
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "#middleware/*": ["middleware/*"],
      "#utils/*": ["utils/*"],
      "#api/*": ["api/*"],
      "#db/*": ["db/*"],
      "#shared/*": ["shared/*"],
      "#use-case/*": ["use-case/*"]
    },

    /* Emit */
    "sourceMap": true,
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    /* Completeness */
    "skipLibCheck": true
  }
}

